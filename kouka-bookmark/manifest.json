{
  "name": "kouka-bookmark",
  "version": "0.1.0",
  "description": "kouka网站的书签管理插件",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "书签管理",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icon.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "unlimitedStorage"
  ]
}